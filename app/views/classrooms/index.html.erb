<p class="lead text-right">
  <%= link_to 'Create new classroom', new_classroom_path, class: 'btn btn-outline-primary' %>
</p>

<table class="table table-hover">
  <h2>Joined Classrooms</h2>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created on</th>
      <th>Owner</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if @joined_classrooms.present? %>
      <%= render partial: "classrooms", locals: {classrooms: @joined_classrooms} %>
    <% else %>
      <tr>
        <td colspan=5 class="empty-classroom-td">
          You have yet to join a classroom!
        </td>
      <tr>
    <% end %>
    
    <tr>
      <td colspan=5 class="empty-classroom-td text-left">
        <h2>Other Classrooms</h2>
      </td>
    <tr>

    <% if @classrooms.present? %>
      <%= render partial: "classrooms", locals: {classrooms: @classrooms} %>
    <% else %>
      <tr>
        <td colspan=5 class="empty-classroom-td">
          There are no classrooms yet.
          <%= link_to 'Create one', new_classroom_path, class: 'btn btn-outline-success btn-sm' %>
        </td>
      <tr>
    <% end %>
  </tbody>
</table>



